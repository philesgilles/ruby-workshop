<h1>New article</h1>
<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 10, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-outline-indigo" %>
  </div>
<% end %>
